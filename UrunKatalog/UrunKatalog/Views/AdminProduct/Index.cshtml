@model IEnumerable<UrunKatalog.Models.Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">

    <h2>Ürün Listesi</h2>


    <p>
        @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table" id="tblProduct">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" width="70" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductNames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) <i class="fa fa-turkish-lira" aria-hidden="true"></i>
                </td>
                <td>
                    @if (item.IsHome)
                    {
                        <label class="badge badge-success">
                            <i class="fa fa-check-circle" aria-hidden="true"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="fa fa-check-circle" aria-hidden="true"></i>
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @if (item.IsApproved)
                    {
                        <label class="badge badge-success">
                            <i class="fa fa-check-circle" aria-hidden="true"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="fa fa-check-circle" aria-hidden="true"></i>
                            Hayır
                        </label>
                    }

                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.ProductId }, new { @class = "btn btn-primary btn-sm" })
                    @*@Html.ActionLink("Sil", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger btn-sm" })*@
                    <a class="btn btn-danger btn-sm btnProductDelete" data-id="@item.ProductId" style="color:white">Sil</a>
                </td>
            </tr>
        }

    </table>

</div>

